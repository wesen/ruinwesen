<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:bknr="http://bknr.net/"
      xmlns:ruinwesen="http://ruinwesen.com"
      xmlns:portfolio="http://portfolio.ruinwesen.com">

  <portfolio:head title="Odendahl Systemprogrammierung - Manuel Odendahl's Portfolio"/>

<portfolio:admin-page>
	<body>
    <portfolio:header/>

		<div id="content">
			<img id="golem-logo" alt="Golem" src="static/images/golem-logo.png"/>
		
			<div class="maincontainerbig">
			<div id="contact">
				<div id="mailimg">
				<img src="static/images/mail.png" alt="mail"/>
				</div>
        <portfolio:add-project-form>
				<form action="add-project" method="post" enctype="multipart/form-data">
					<div class="left1col">
						<div class="contactinfo">
						<div class="formelt">
							<label for="title">Title: <em><img src="static/images/required.png" alt="required"/></em></label>
							<input type="text" size="30" id="title" name="title"/>
						</div>
						<div class="formelt">
							<label for="tags">Tags (space-separated): <em><img src="static/images/required.png" alt="required"/></em></label>
							<input type="text" size="30" id="tags" name="tags"/>
						</div>
						<div class="formelt">
							<label for="time">Time (YYYY-MM-DD): </label>
							<input type="text" size="30" id="time" name="time"/>
						</div>
						<div class="formelt">
							<label for="file">File: <em><img src="static/images/required.png" alt="required"/></em></label>
							<input type="file" size="30" id="file" name="file"/>
						</div>
						<div class="formelt">
							<label for="boxfile">Box File: <em><img src="static/images/required.png" alt="required"/></em></label>
							<input type="file" size="30" id="boxfile" name="boxfile"/>
						</div>
						</div> <!-- contactinfo -->
					</div> <!-- left1col -->
					<div class="right2col">
						<div class="contactmessage">
						<textarea id="description" name="description" cols="60"	rows="20">  </textarea>
              <portfolio:add-project-form-errors/>

              <input type="submit" id="submit" value="Add the	project!" name="submit"/>						
						</div>
					</div>
				</form> <!-- contact -->
          </portfolio:add-project-form>
			</div> <!-- contact -->
			</div> <!-- maincontainerbig -->
		
		</div>

    <portfolio:footer/>
	</body>
    </portfolio:admin-page>

</html>